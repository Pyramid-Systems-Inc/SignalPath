{
  "name": "signalpath",
  "private": true,
  "version": "0.3.0",
  "description": "A professional intercom system designer and schematic editor for signal path visualization",
  "author": {
    "name": "Omar Aglan",
    "email": "Omar.aglan91@gmail.com"
  },
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "eslint .",
    "build:package": "npm run build && electron-builder",
    "electron:pack": "electron-builder",
    "electron:dist": "electron-vite build && electron-builder"
  },
  "dependencies": {
    "konva": "^9.3.20",
    "nanoid": "^5.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-konva": "^19.0.6",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.signalpath.intercom-designer",
    "productName": "SignalPath Intercom Designer",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "!electron/**/*.ts",
      "!electron/**/*.map"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    }  
  }
}
