{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "signalpath",
  "version": "0.1.0",
  "identifier": "com.signalpath.app",
  "build": {
    "beforeDevCommand": "dotnet watch run --project src/Signalpath.csproj",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dotnet publish -c release src/Signalpath.csproj -o dist",
    "frontendDist": "../dist/wwwroot"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SignalPath - Intercom System Designer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "decorations": true,
        "fullscreen": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' data: https://tauri.app",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "connect-src": "'self' ws://localhost:* http://localhost:*",
        "font-src": "'self' data:",
        "object-src": "'none'",
        "base-uri": "'self'",
        "form-action": "'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
